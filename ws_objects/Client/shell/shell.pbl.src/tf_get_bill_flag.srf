global function integer tf_get_bill_flag (string ps_cpr_id, long pl_encounter_id, long pl_problem_id, ref string ps_bill_flag);string ls_bill_flag
integer li_sts

tf_begin_transaction(this, "tf_get_bill_flag()")

  SELECT bill_flag
    INTO :ls_bill_flag
    FROM p_Encounter_Assessment
   WHERE cpr_id = :ps_cpr_id
	AND encounter_id = :pl_encounter_id
	AND problem_id = :pl_problem_id;

if not tf_check() then return -1

if sqlca.sqlcode = 100 then
	li_sts = 0
else
	li_sts = 1
end if

tf_commit()

if li_sts = 1 then
	ps_bill_flag = ls_bill_flag
end if

return li_sts

end function

