global type f_convert_tiff_to_bmp from function_object
end type

forward prototypes
global function integer f_convert_tiff_to_bmp (string ps_tiff_file, ref string ps_bmp_file)
end prototypes

global function integer f_convert_tiff_to_bmp (string ps_tiff_file, ref string ps_bmp_file);integer li_sts

if isnull(ps_tiff_file) then
	log.log(po_null, "f_convert_tiff_to_bmp.0004", "Null file name", 3)
	return -1
end if

if not fileexists(ps_tiff_file) then
	log.log(po_null, "f_convert_tiff_to_bmp.0004", "File not found (" + ps_tiff_file + ")", 3)
	return -1
end if

if isnull(ps_bmp_file) or len(ps_bmp_file) = 0 then
	ps_bmp_file = f_temp_file("bmp")
end if

TRY
	li_sts = common_thread.eprolibnet4.ConvertImage(ps_tiff_file, ps_bmp_file)
CATCH (throwable lt_error)
	log.log(po_null, "f_convert_tiff_to_bmp.0004", "Error converting image file from ~"" + ps_tiff_file + "~" to ~"" + ps_bmp_file + "~":  " + lt_error.text, 3)
	return -1
END TRY

if li_sts <= 0 then
	log.log(po_null, "f_convert_tiff_to_bmp.0004", "Error converting file (" + ps_tiff_file + ")", 3)
	return -1
end if


return 1

end function

